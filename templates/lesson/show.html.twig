{% extends 'base.html.twig' %}

{% block title %}Курсы/{{ lesson.course.name }}/{{ lesson.name }}{% endblock %}

{% block body %}
    <h1>{{ lesson.name }}</h1>
    <h2>из курса <a href="{{ path('app_course_show', {'id' : lesson.course.id}) }}">{{ lesson.course.name }}</a></h2>
    <table class="table">
        <tbody>
        <tr>
            <th>Номер урока</th>
            <td>{{ lesson.number }}</td>
        </tr>
        <tr>
            <th>Название</th>
            <td>{{ lesson.name }}</td>
        </tr>
        <tr>
            <th>Описание</th>
            <td>{{ lesson.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
