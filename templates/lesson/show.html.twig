{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name }}/{{ lesson.course.name }}/Курсы{% endblock %}

{% block body %}
    <a class="btn btn-light" href="{{ path('app_course_show', {'id': lesson.course.id}) }}">
        <svg style="height: auto; width: 15px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <path d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l160 160c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.2 288 416 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-306.7 0L214.6 118.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-160 160z"/>
        </svg>
        Вернуться к курсу</a>
    <h1>{{ lesson.name }}</h1>
    <h2>из курса <a class="course-name" href="{{ path('app_course_show', {'id' : lesson.course.id}) }}">{{ lesson.course.name }}</a></h2>
    <table class="table">
        <tbody>
        <tr>
            <th>Номер урока</th>
            <td>{{ lesson.number }}</td>
        </tr>
        <tr>
            <th>Название</th>
            <td>{{ lesson.name }}</td>
        </tr>
        <tr>
            <th>Действия</th>
            <td>{{ lesson.description }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a class="btn btn-outline-dark me-2" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>
        {{ include('lesson/_delete_form.html.twig') }}
    </div>

{% endblock %}
