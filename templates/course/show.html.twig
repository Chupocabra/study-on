{% extends 'base.html.twig' %}

{% block title %}Курсы/{{ course.name }}{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Описание</th>
            <td>{{ course.description }}</td>
        </tr>
        </tbody>
    </table>
    <ul>
        {% for lesson in course.lessons|sort((a,b) => a.number <=> b.number) %}
            <li><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.number ~ ') ' ~ lesson.name }}</li>
        {% endfor %}
    </ul>
    <a href="{{ path('app_lesson_new', {'id': course.id}) }}">Добавить урок</a>

    <div>
        <a href="{{ path('app_course_index') }}">Вернуться к списку</a>
        <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>
    </div>


    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
