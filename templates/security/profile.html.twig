{% extends 'base.html.twig' %}

{% block title %}Профиль пользователя{% endblock %}

{% block body %}
    <div class="container">
        <div class="mt-2">
            <h1 class="h3 mb-3 font-weight-normal">Профиль {{ app.user.userIdentifier }}, <a
                        href="{{ path('app_logout') }}">выход</a></h1>
            <div class="row fs-4">
                <div class="col-6">
                    Электронная почта
                </div>
                <div class="col-6">
                    {{ user.username }}
                </div>
                <div class="col-6">
                    Роль пользователя
                </div>
                <div class="col-6">
                    {% if user.roles[0] == 'ROLE_USER' %}
                        Пользователь
                    {% elseif user.roles[0] == 'ROLE_SUPER_ADMIN' %}
                        Администратор
                    {% else %}
                        {{ user.roles[0] }}
                    {% endif %}
                </div>
                <div class="col-6">
                    Баланс
                </div>
                <div class="col-6">
                    {{ balance }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
